@using Microsoft.AspNetCore.Components
@using ScrumBoard.Models.Entities
@inherits BaseProjectScopedComponent

<ul class="list-group mb-4">
    <li class="list-group-item grey-input-group-background border-bottom-0">
        <div class="row justify-content-end gx-0 align-items-center">
            <label class="col fw-bold">Members</label>
            <label class="col-auto">
                Only show developers
                <input id="dev-filter-checkbox" type="checkbox" @bind="_onlyShowDevelopers"/>
            </label>
        </div>                                
    </li>
    <ProjectMemberList OnlyShowSingleRole="_onlyShowDevelopers" AllowedRole="ProjectRole.Developer"></ProjectMemberList>                       
</ul>    
